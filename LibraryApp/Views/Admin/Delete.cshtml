@model LibraryApp.Models.Inventory

@{
    ViewData["Title"] = "Delete Inventory Item";
}

<h1>Delete Inventory Item</h1>

<h3>Are you sure you want to delete this item?</h3>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.ISBN</dd>

        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
